<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_diary">

    <fragment
        android:id="@id/navigation_diary"
        android:name="com.zenith.stayfit.ui.home.HomeFragment"
        android:label="@string/nav_diary"
        tools:layout="@layout/fragment_home"/>

    <fragment
        android:id="@+id/navigation_workout"
        android:name="com.zenith.stayfit.ui.running.view.RunFragment"
        android:label="@string/nav_workout"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/navigation_nutrition"
        android:name="com.zenith.stayfit.ui.supplements.SupplementsFragment"
        android:label="@string/nav_nutrition"
        tools:layout="@layout/fragment_run_main" />

    <fragment
        android:id="@+id/navigation_user"
        android:name="com.zenith.stayfit.ui.profile.view.ui.main.ProfileMainFragment"
        android:label="@string/nav_user"
        tools:layout="@layout/profile_fragment" />

</navigation>